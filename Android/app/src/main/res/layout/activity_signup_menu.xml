<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.SignupMenu"
    android:background="@drawable/bg">


    <Button
        android:text="Registrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerNewUserButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@mipmap/halfwidthbutton"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password2"
        android:hint="********"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/signup_password1"
        android:layout_alignStart="@+id/signup_password1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/signup_password1"
        android:hint="********"
        android:layout_above="@+id/signup_password2"
        android:layout_alignLeft="@+id/signup_unameEditText"
        android:layout_alignStart="@+id/signup_unameEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="AnvÃ¤ndarnamn"
        android:ems="10"
        android:id="@+id/signup_unameEditText"
        android:layout_above="@+id/signup_password1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
