<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.android.GameTwo">

    <Button
        android:id="@+id/card12"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/card22"
        android:layout_alignRight="@+id/card22"
        android:layout_alignTop="@+id/card11"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card12"/>

    <Button
        android:id="@+id/card13"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/card12"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card13"/>

    <Button
        android:id="@+id/card21"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card21"/>

    <Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card11"/>

    <Space
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card11"/>

    <Button
        android:id="@+id/card22"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/card21"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card22"/>

    <Button
        android:id="@+id/card23"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/card22"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card23"/>

    <Space
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/card21"/>

    <Button
        android:id="@+id/card31"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space2"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card31"/>

    <Button
        android:id="@+id/card32"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/card31"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card32"/>

    <Button
        android:id="@+id/card33"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/card32"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card33"/>

    <Space
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/card31"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/card41"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space3"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card41"/>

    <Button
        android:id="@+id/card42"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/card32"
        android:layout_alignStart="@+id/card32"
        android:layout_below="@+id/space3"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card42"/>

    <Button
        android:id="@+id/card43"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/card33"
        android:layout_alignStart="@+id/card33"
        android:layout_below="@+id/space3"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card43"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/listenButton"
        android:layout_below="@+id/card43"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressBar_Game2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progressTint="@android:color/holo_green_light"
            android:secondaryProgress="4"/>
    </RelativeLayout>

    <Button
        android:id="@+id/listenButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/quarterwidthbutton"
        android:text="Lyssna"/>


    <Button
        android:id="@+id/nextButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/nexticon"/>

    <TextView
        android:id="@+id/timePassedView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textAllCaps="false"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/card11"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timePassedView"
        android:layout_marginTop="13dp"
        android:background="@mipmap/quarterwidthbutton"
        android:text="card11"/>
</RelativeLayout>
