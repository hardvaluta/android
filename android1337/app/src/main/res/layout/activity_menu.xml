<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android1337.MenuActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Det 채r roligt att spela ______ p책 sommaren."
            android:id="@+id/textView"
            android:layout_weight="0.07"
            android:gravity="center_vertical|center_horizontal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.14" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="fotboll"
            android:id="@+id/wordButton1"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:contextClickable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="heter"
            android:id="@+id/wordButton2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:contextClickable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="snickare"
            android:id="@+id/wordButton3"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:contextClickable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="hemmabygge"
            android:id="@+id/wordButton4"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:contextClickable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="N채sta"
            android:id="@+id/nextSentenceButton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04"
            android:contextClickable="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Po채ng: "
            android:id="@+id/scoreTextView"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
